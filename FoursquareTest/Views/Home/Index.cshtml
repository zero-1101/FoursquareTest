@{
    ViewData["Title"] = "Home Page";
}

@section Head {
    <script src='https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.css' rel='stylesheet' />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/Index-searchbar.css" asp-append-version="true" />
}

<!--body section start-->

<div class="row">
    <div class="col-12 position-relative">

        <div id='map' class="row flex-grow-1" style='height: 80vh;'></div>

        <div class="col-md-3 col-12 position-absolute top-0 start-0 mt-2 mx-md-2 z-index-5">
            <div class="card rounded-search bg-transparent border-0">
                <div class="card-header rounded-search-top border-bottom-0 bg-transparent p-0 d-flex">
                    <form action="" id="search-form" method="post" class="d-flex rounded-pill flex-grow-1 bg-white me-2">
                        <input type="search" id="search-input" class="form-control rounded-pill" placeholder="Search Foursquare Places" autocomplete="off" />
                        <button type="submit" id="search-button" class="search-span"></button>
                    </form>
                    <button id="bookmark-toggle-button" class="btn btn-light p-0 float-end" type="button">
                        <span class="material-symbols-outlined m-1">
                            bookmarks
                        </span>
                    </button>
                </div>
                <div id="suggerence-container" class="card-body p-2">
                    <ul id="suggerence-list" class="list-group bg-white thin-scrollbar" style="overflow-y:scroll; max-height:25vh;"></ul>
                    <div id="suggerence-error" class="bg-white">
                        Something went wrong. Please refresh and try again.
                    </div>
                    <div id="suggerence-not-found" class="bg-white"></div>
                </div>
            </div>
        </div>

        <div id="search-side-panel" class="col-md-4 collapse collapse-horizontal position-absolute top-0 start-0 z-index-4">
            <div class="card card-body" style="max-height:80vh;">
                <div class="d-flex justify-content-between">
                    <div class="d-flex justify-content-between align-items-baseline pt-5">
                        <h5 class="modal-title d-flex me-2">Resultados</h5>
                        <span id="search-spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <button id="search-close-button" class="btn-close" type="button"></button>
                </div>
                <ul id="search-list" class="list-group bg-white" style="overflow-y:scroll; height:80vh;"></ul>
                <div id="search-error" class="bg-white">
                    Something went wrong. Please refresh and try again.
                </div>
                <div id="search-not-found" class="bg-white"></div>
            </div>
        </div>
        <div id="bookmark-side-panel" class="col-md-4 collapse collapse-horizontal position-absolute top-0 start-0 z-index-4">
            <div class="card card-body" style="max-height:80vh;">
                <h5 class="mt-5">Guardados</h5>
                <ul id="bookmark-list" class="list-group bg-white" style="overflow-y:scroll; height:80vh;"></ul>
            </div>
        </div>

    </div>
</div>

<!--body section end-->

@section Scripts {
    <script src="~/js/Home/Index.js" asp-append-version="true"></script>
    <script src="~/js/Home/Index-searchbar.js" asp-append-version="true"></script>
}
